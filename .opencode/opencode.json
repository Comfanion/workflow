{
  "$schema": "https://opencode.ai/config.json",
  
  "instructions": [
    ".opencode/FLOW.yaml",
    "docs/requirements/requirements.md",
    "docs/prd.md",
    "docs/architecture.md"
  ],
  
  "agent": {
    "build": {
      "mode": "primary",
      "description": "Default development agent - use @pm, @architect, @analyst, @dev for specialized tasks"
    },
    "plan": {
      "disable": true
    }
  },
  
  "permission": {
    "bash": {
      "*": "allow",
      "rm -rf *": "deny",
      "git push --force*": "ask",
      "git reset --hard*": "ask"
    }
  }
}
